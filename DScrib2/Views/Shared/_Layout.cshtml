<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <script src="https://cdn.jsdelivr.net/combine/npm/jquery@3.3.1,npm/underscore@1.9.1,npm/backbone@1.3.3,npm/moment@2.22.2"></script>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@("@")fortawesome/fontawesome-free@5.4.1/css/brands.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@("@")fortawesome/fontawesome-free@5.4.1/css/fontawesome.min.css">

  <style>
    .product-name {
      font-weight: bold;
    }

    .footer {
      text-align: right;
    }

    .top-bar {
      text-align: right;
      margin-bottom: 1rem;
    }

    .g-signin2 {
      display: inline-block;
    }

    .explain {
      margin-bottom: 1rem;
    }
  </style>

  <meta name="google-signin-scope" content="profile email">
  <meta name="google-signin-client_id" content="@ViewBag.ClientID">
  <script src="https://apis.google.com/js/platform.js" async defer></script>
  <script type="text/javascript" src="/index.js"></script>
  @RenderSection("head", required: false)

</head>
<body>
  <div class="container main-cont">
    <div class="row">
      <div class="col">
        <h3>DScrib2</h3>
        <i>An app to peruse Amazon.com products via their top reviews. (WIP)</i>

        @RenderBody()
      </div>
    </div>

    <div class="row">
      <div class="col footer">
        Copyright (c) 2018 <a href="https://mikedll.netlify.com/" target="_blank">Michael Rivera</a>
        |
        Running on ASP.NET 4.6.1
        |
        <a href="https://github.com/mikedll/dscrib2" target="_blank"><i class="fab fa-github"></i> Source Code</a>

      </div>
    </div>
  </div>
</body>
</html>
