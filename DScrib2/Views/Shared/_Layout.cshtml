<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <script src="https://cdn.jsdelivr.net/combine/npm/jquery@3.3.1,npm/underscore@1.9.1,npm/backbone@1.3.3,npm/moment@2.22.2,npm/popper.js@1.14.4,npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@("@")fortawesome/fontawesome-free@5.4.1/css/brands.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@("@")fortawesome/fontawesome-free@5.4.1/css/solid.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@("@")fortawesome/fontawesome-free@5.4.1/css/fontawesome.min.css">

  <style>
    .product-name {
      font-weight: bold;
    }

    .footer {
      text-align: right;
    }


    .explain {
      margin-bottom: 1rem;
    }
  </style>

  <meta name="google-signin-scope" content="profile email">
  <meta name="google-signin-client_id" content="@ViewBag.ClientID">
  <script src="https://apis.google.com/js/platform.js" async defer></script>
  <script type="text/javascript" src="/index.js"></script>
  @RenderSection("head", required: false)

</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-light bg-light">
    <a class="navbar-brand" href="/">
      DScrib2
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          @Html.ActionLink("Saved Reviews", "Index", "MyReviews", null, new { @class = "nav-link" })
        </li>
        <li class="nav-item">
          @Html.ActionLink("Email Usage Notes", "YourEmail", "Home", null, new { @class = "nav-link" })
        </li>
      </ul>

      <div class="g-signin2" data-onsuccess="onSignIn" data-theme="dark"></div>

    </div>
  </nav>

  <div class="container main-cont">
    <div class="row mt-2">
      <div class="col">
        @RenderBody()
      </div>
    </div>

    <div class="row">
      <div class="col footer">
        Copyright (c) 2018 <a href="https://mikedll.netlify.com/" target="_blank">Michael Rivera</a>
        |
        Running on ASP.NET 4.6.1
        |
        <a href="https://github.com/mikedll/dscrib2" target="_blank"><i class="fab fa-github"></i> Source Code</a>

      </div>
    </div>
  </div>
</body>
</html>
